<div class="row">
  <div class="col-md-12">
    <hr><br>
    <h2>Categories</h2>
    <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
              <td><a
                  href="/posts?category={{this.id}}"
                >{{this.category}}</a></td>
              <td><a href="categories/delete/{{id}}" class="btn btn-danger">remove</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{#unless categories}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}
  </div>
</div>