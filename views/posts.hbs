<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
    <title>Posts</title>
    <hr><br>
    <h2>Posts</h2>
    <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        <table class="table">
            <!-- Table Headings -->
            <thead>
                <tr>
                    <th> Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>
                </tr>
            </thead>
            <!-- Table Body -->
            <tbody>
                {{#each posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{postDate}}</td>
                  <!--Category as a link -->
                   <td><a href= "/posts?category={{category}}" >{{category}}</a></td>
                    <td>{{published}}</td>
                    <td><a href="posts/delete/{{id}}" class="btn btn-danger">remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</div>
<!--Error message displaying -->
<div class="col-md-12 text-center">
    {{#unless posts}}
    <strong>{{message}}</strong>
    {{/unless}}
    </div>
